    <body>

        <div class="container">

            {#{% include('flash-messages.html.twig') %}#}

            {% if app.user %}

                <a href="{{ path('app_security_logout') }}">Logout</a>

            {% endif %}

            {% block body %}{% endblock %}

        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
